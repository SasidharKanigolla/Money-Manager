<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>home</title>
    <link rel="stylesheet" href="expenditure_home.css" />
    <link rel="stylesheet" href="nav.css" />
    <style>
      h1 {
        text-align: center;
        color: rgb(23, 23, 161);
      }
    </style>
  </head>
  <body>
    <div class="nav">
      <h1>Money Manager</h1>
      <div class="link">
        <a href="/">Home</a><a href="/income">Income</a
        ><a href="/expenditure">Expenditure</a>
      </div>
    </div>
    <h1>Expenditure Detials</h1>
    <div class="container">
      <% let sum = 0 %> <% for(let detail of details) {%> <% sum = sum +
      detail.amount %> <% } %> <% console.log(sum); %>
      <div class="Total">
        <div class="spent">
          <p>Expenditure &nbsp; <span style="color: red">₹<%= sum %></span></p>
        </div>
      </div>
      <% for(let detail of details){%>
      <div class="exp">
        <p><%=detail.name%></p>
        <div class="amount">
          <p>₹<%=detail.amount%></p>
        </div>
        <form method="get" action="/expenditure/view/<%= detail._id  %>">
          <button class="mybut">view</button>
        </form>
        <form method="get" action="/expenditure/edit/<%= detail._id  %>">
          <button class="mybut">Edit</button>
        </form>
        <form
          method="post"
          action="/expenditure/delete/<%= detail._id  %>?_method=DELETE"
        >
          <button class="mybut">Delete</button>
        </form>
      </div>
      <br />
      <% } %>
    </div>
    <form method="get" action="/expenditure/new">
      <!-- <div class="but"> -->
      <button class="new">+</button>
      <!-- </div> -->
    </form>
  </body>
</html>
